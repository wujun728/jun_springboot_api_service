package cn.edu.scu.virjarjcd.feature.utils.exception;

import lombok.Data;

import com.fasterxml.jackson.annotation.JsonInclude;
import com.fasterxml.jackson.annotation.JsonInclude.Include;

/**
 * The rest API error model
 * @author weijia.deng
 *
 */
@Data
@JsonInclude(Include.NON_EMPTY)
public class RestApiError {
	/**
	 * The http status code
	 */
	private String statusCode;

	/**
	 * The localized message for end-user
	 */
	private String message;

	/**
	 * Raw error message for debugging purposes, always as exception's message
	 */
	private String rawMessage;

	/**
	 * Validation error
	 */
	private ValidationError validationError;

	/**
	 * Typically a link to a document where more information can be accesses
	 */
	private String moreInfo;
}
