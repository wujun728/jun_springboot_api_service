package cn.edu.scu.virjarjcd.feature.utils.exception;

import java.util.Map;

import lombok.Data;

import com.fasterxml.jackson.annotation.JsonInclude;
import com.fasterxml.jackson.annotation.JsonInclude.Include;

@Data
@JsonInclude(Include.NON_EMPTY)
public class ValidationError {
	/**
	 * map of global validation errors
	 */
	private Map<String, String> globalErrors;
	/**
	 * map of field validation errors *
	 * <p>
	 * key: the invalid field in the object <BR>
	 * value: collection of messages indicating the errors for that field/object.<BR>
	 * <p>
	 * E.g. A JSON representation of this object looks like this: <BR>
	 * {<BR>
	 * "user[0].items[0].name": "size must be between 0 and 64" <BR>
	 */
	private Map<String, String> fieldErrors;

}
